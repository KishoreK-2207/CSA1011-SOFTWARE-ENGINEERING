import tkinter as tk
from tkinter import simpledialog

root = tk.Tk()
root.title("Kanban Board")

def add_task():
    task = simpledialog.askstring("Task", "Enter task:")
    if task: todo.insert(tk.END, task)

def move(src, dest):
    if src.curselection():
        item = src.get(src.curselection())
        src.delete(src.curselection())
        dest.insert(tk.END, item)

frame = tk.Frame(root); frame.pack()

todo = tk.Listbox(frame, width=20, height=10); todo.grid(row=1, column=0)
progress = tk.Listbox(frame, width=20, height=10); progress.grid(row=1, column=1)
done = tk.Listbox(frame, width=20, height=10); done.grid(row=1, column=2)

tk.Label(frame, text="To Do").grid(row=0, column=0)
tk.Label(frame, text="In Progress").grid(row=0, column=1)
tk.Label(frame, text="Done").grid(row=0, column=2)

tk.Button(root, text="Add Task", command=add_task).pack()
tk.Button(root, text="→", command=lambda: move(todo, progress)).pack()
tk.Button(root, text="→", command=lambda: move(progress, done)).pack()

root.mainloop()
